{
  "version": "2017-02-28",
  "operation": "PutItem",
  "key": {
    "name": $util.dynamodb.toDynamoDBJson($ctx.args.input.name),
  },
  "attributeValues": $util.dynamodb.toMapValuesJson($ctx.args.input),
  "condition": {
    "expression": "attribute_not_exists(#name)",
    "expressionNames": {
      "#name": "name",
    },
  },
}